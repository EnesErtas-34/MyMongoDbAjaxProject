@model Product
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Shared/_MongoLayout.cshtml";
}

<h1>Yeni Ürün Girişi</h1>

<form method="post">
    <label>Ürün Adı</label>
    <input type="text" asp-for="ProductName" class="form-control" style="border:1px solid #000" />
    <br />
    <label>Ürün Fiyatı</label>
    <input type="text" asp-for="ProductPrice" class="form-control" style="border:1px solid #000" />
    <br />
    <label>Ürün Stok Sayısı</label>
    <input type="text" asp-for="ProductStock" class="form-control" style="border:1px solid #000" />
    <br />
    <label>Kategori ID</label>
    <input type="text" asp-for="CategoryID" class="form-control" style="border:1px solid #000" />
    <br />
    <button class="btn btn-primary">Ürünü Ekle</button>
</form>

